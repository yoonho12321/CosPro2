/////////////////////////////
#include <stdio.h>

int main() {
    // 문자 'A'의 아스키 코드 값 출력
    char ch = 'A'; // 문자 'A'를 변수 ch에 할당
    printf("문자 'A'의 아스키 코드 값: %d\n", ch); // 'A'의 아스키 코드 값 출력

    // 정수 값 65에 해당하는 문자 출력
    int num = 65; // 정수 값 65를 변수 num에 할당
    printf("아스키 코드 값 65에 해당하는 문자: %c\n", num); // 아스키 코드 값 65에 해당하는 문자 출력

    return 0;
}
//////////////////////////////////////
#include <stdio.h>

int main(void)
{
    // 변수 선언 및 초기화
    double num1 = 245;
    int num2 = 3.1415; // 실수를 정수로 변환할 때 소수 부분은 버려집니다.
    int num3 = 129;
    char ch = num3; // 정수를 문자로 변환합니다.

    // 결과 출력
    printf("정수 245를 실수로 : %f \n", num1);
    printf("실수 3.1415를 정수로 :  %d\n", num2); // 실수를 정수로 변환하면 소수 부분이 버려집니다.
    printf("큰 정수 129를 작은 정수로: %d\n", ch); // 정수를 문자로 변환합니다.
    
    return 0;
}
